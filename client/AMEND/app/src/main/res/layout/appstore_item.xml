<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="@color/snow"
    >

    <ImageView tools:ignore="ContentDescription"
        android:id="@+id/id_down_logo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:layout_margin=" 5dp"
        android:src="@drawable/ic_launcher"
        />
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <TextView
            android:paddingTop="12dp"
            android:id="@+id/id_down_name"
            android:text="微信2018版"
            android:singleLine="true"
            android:ems="6"
            android:textSize="18sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />



        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            xmlns:tools="http://schemas.android.com/tools" >


            <TextView
                android:id="@+id/id_down_daxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="0M"
                />

            <TextView
                android:id="@+id/id_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="未安装"
                />

            <TextView
                android:id="@+id/id_down_sudu"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="0%"
                android:gravity="right" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_downloading"
            android:layout_width="fill_parent"
            android:visibility="invisible"
            android:layout_height="4dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="1000"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ImageView

            android:src="@drawable/tab_line"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            />
        <!--         <ImageView -->
        <!--              android:id="@+id/soft_down_operate" -->
        <!--             android:src="@drawable/ic_launcher" -->
        <!--             android:layout_margin="5dp" -->
        <!--             android:layout_height="fill_parent" -->
        <!--             android:layout_width="fill_parent" -->
        <!--             /> -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/id_download_weixin"
                android:text="下载"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:onClick="btnClick"
                />
            <TextView
                android:id="@+id/id_install"
                android:text="安装"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:onClick="btnClick"
                />
            <TextView
                android:id="@+id/id_cancel"
                android:text="取消"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:onClick="btnClick"
                />
            <TextView
                android:id="@+id/id_update"
                android:text="更新"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:onClick="btnClick"
                />
            <TextView
                android:id="@+id/id_uninstall"
                android:text="卸载"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:onClick="btnClick"
                />

            <TextView
                android:id="@+id/id_continue"
                android:text="继续"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:onClick="btnClick"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

